pi=13.124.47.223
ii=172.17.0.1

sudo apt-get update
sudo apt-get upgrade -y

sudo apt install -y apt-transport-https ca-certificates
sudo apt install -y curl gnupg-agent software-properties-common

curl -fsSL https://get.docker.com/ | sudo sh

sudo docker volume create kurento
sudo docker volume create coturn

sudo docker run -d --name inline_kms --network host -v kurento:/etc/kurento kurento/kurento-media-server:latest
 sudo docker run -d --name inline_coturn --network host --user root coturn/coturn --external-ip='$pi' --relay-ip='$ii'


sudo cp -r kurento/* /var/lib/docker/volumes/kurento/_data/modules/kurento/
sudo docker restart kms

sudo apt-get install nginx
sudo systemctl start nginx
sudo cp -r /nginx/default /etc/nginx/site-available/
sudo systemctl restart nginx  
